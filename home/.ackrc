# Ignore build_output directory
--ignore-dir=build_output

# Ignore tiny js files
--ignore-dir=tiny_mce

# Ignore session dir
--ignore-dir=session

# Ignore cache dir
--ignore-dir=cache

# Add 'tpl' type.
# NB: line break is necessary, see http://code.google.com/p/ack/issues/detail?id=116
--type-set
tpl=.tpl

# Add 'po' and 'pot' type (i18n)
--type-set
po=.po,.pot

# Add 'phtml' filetype for PHP
--type-set
php=.php,.phpt,.php3,.php4,.php5,.phtml,.inc

# Add '.htaccess' filetype
--type-set
ht=.htaccess

# Specific files to ignore
--ignore-file=is:MODERN.sql
--ignore-file=is:SASTSTAG.sql
--ignore-file=is:SAST_LOUNGE.sql
