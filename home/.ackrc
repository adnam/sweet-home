# Ignore build_output directory
--ignore-dir=is:build_output

# Ignore tiny js files
--ignore-dir=is:tiny_mce

# Ignore session dir
--ignore-dir=is:session

# Ignore cache dir
# --ignore-dir=is:cache

--ignore-dir=is:.ENV
--ignore-dir=is:.venv

# Add 'tpl' type.
# NB: line break is necessary, see http://code.google.com/p/ack/issues/detail?id=116
--type-set
tpl=.tpl

# Add 'po' and 'pot' type (i18n)
--type-set
po=.po,.pot

# Add 'phtml' filetype for PHP
--type-set
php=.php,.phpt,.php3,.php4,.php5,.phtml,.inc

# Add python filetype
--type-add=py:ext:py

# Add '.htaccess' filetype
--type-add=ht:ext:htaccess

# Specific files to ignore
--ignore-file=match:MODERN.sql
--ignore-file=match:SASTSTAG.sql
--ignore-file=match:SAST_LOUNGE.sql
--ignore-file=match:sast-dispatcher.log
--ignore-file=match:.coverage
--ignore-dir=fixtures
--ignore-dir=.mypy_cache
--ignore-dir=.pytest_cache
